<%= simple_form_for @post do |f| %>


  <%= f.input :title %>
  <%= f.input :text, as: :text, input_html: { rows: 10 } %>
  <%= f.input :discussion_id, as: :hidden, :input_html => { :value => @discussion_id} %>
  <%= f.input :user_id, as: :hidden, :input_html => { :value => current_user.id} %>

  <%= f.button :submit %>

<% end %>